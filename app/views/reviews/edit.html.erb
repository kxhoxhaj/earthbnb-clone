<div class="container" id="authentication">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
        <h3>Edit Review</h3>
        <%= simple_form_for [@booking, @review] do |f| %>
          <%= f.input :rating, input_html: { type: "number", min: 0, max: 5 } %>
          <%= f.input :content %>
          <%= f.submit 'Submit', class: 'btn btn-primary w-100' %>
        <% end %>
          <%= link_to "⬅️ Go Back", user_path(current_user), class:"btn btn-secondary my-2 pb-2 w-100" %>
    </div>
  </div>
</div>
