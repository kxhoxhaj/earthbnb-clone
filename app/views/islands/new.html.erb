<div class="container" id="authentication">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4 py-3">
      <%= simple_form_for(@island) do |f| %>
        <%= f.input :title %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Go back", islands_path %>
