<% if user_signed_in? %>
  <%= render 'islands/user_navbar' %>
<% else %>
  <%= render 'islands/visitor_navbar' %>
<% end %>

<div class="container gx-0 ml-0 my-4">
  <div class="row align-items-start">
    <div class="col-12 col-lg-9 gx-0 mr-3" id="show">
      <h3><%= @island.title %></h3>
      <div id="carouselShow" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner px-3">
          <% if @island.photos.attached? %>
            <div class="carousel-item active">
              <%= cl_image_tag @island.photos.last.key, crop: :fill, height: 500, radius: 5, class: "d-block w-100"%>
            </div>
          <% end %>
          <% @island.photos.reject do |photo| %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, crop: :fill , height: 500, radius: 5, class: "d-block w-100"%>
            </div>
          <% end if @island.photos.attached? %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselShow" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselShow" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="card-trip-infos px-3">
        <div>
          <p><strong>Location:</strong> <%= @island.address %></p>
          <p><strong>About:</strong> <%= @island.description %></p>
          <p class="card-trip-pricing"> <strong>Price:</strong> $<%= @island.price_per_night %> /night</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-3 forms flex-column gx-0">
      <div id="booking-form">
        <h3>Request Booking</h3>
        <%= simple_form_for [@island, @booking ] do |f| %>
          <%= f.input :start_date, as: :string, input_html: { data: { controller: 'datepicker' } } %>
          <%= f.input :end_date, as: :string,  input_html: { data: { controller: 'datepicker' } } %>
          <%= f.submit 'Request Booking', class: 'btn btn-primary w-100' %>
        <% end %>
      </div>

      <div id="review-form">
        <% if @last_user_booking %>
          <h3>Add a Review</h3>
          <%= simple_form_for [@last_user_booking, @review] do |f| %>
            <%= f.input :rating, input_html: { type: "number", min: 0, max: 5 } %>
            <%= f.input :content %>
            <%= f.submit 'Submit', class: 'btn btn-primary w-100' %>
          <% end %>
        <% end %>
      </div>
      <% if current_user && !current_user.bookings.empty? %>
        <% if current_user.bookings.last.save %>
          <%= link_to "Go Back", islands_path, class:"btn btn-secondary w-100" %>
        <% else %>
          <%= link_to "Go Back", island_path(@island), class:"btn btn-secondary w-100" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% if @island.user == current_user %>
  <%= link_to "Delete",
    island_path(@island),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  <% @island.bookings.each do |booking| %>
    <p><%= link_to "Edit booking", edit_island_booking_path(@island, booking) %></p>
    <p>Starts at: <%= booking.start_date %></p>
    <p>Ends in: <%= booking.end_date %></p>
    <p><%= link_to "Accept booking", accept_island_booking_path(@island, booking), data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to accept this booking?" }  %></p>
    <p><%= booking.status %></p>
  <% end %>
<% end %>

<style>
  .custom-card {
    margin-bottom: 10px;
  }
</style>

<div>
  <h3 class="text-center">Reviews of the Island</h3>
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <% @island.bookings.each do |booking| %>
        <% if booking.review %>
          <div class="card custom-card mb-20">
            <div class="card-body m-3">
              <div class="row">
                <div class="col-lg-4 d-flex justify-content-center align-items-center mb-4 mb-lg-0">
                  <img src="https://www.elevenforum.com/proxy.php?image=https%3A%2F%2Fi.hizliresim.com%2Fqde7y7b.png&hash=8840a7826b2be91b53ca4f36d7726152"
                    class="rounded-circle img-fluid shadow-1" alt="woman avatar" width="200" height="200" />
                </div>
                <div class="col-lg-8">
                  <p class="fw-bold lead mb-4"><%= booking.user.username %></p>
                  <p class="fw-bold text-muted mb-2"><%= booking.review.content %></p>
                  <p>Rating: <%= booking.review.rating %>/5.0</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
