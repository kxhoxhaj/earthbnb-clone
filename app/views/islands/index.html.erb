<% if user_signed_in? %>
  <%= render 'user_navbar' %>
<% else %>
  <%= render 'visitor_navbar' %>
<% end %>

  <h1 class="text-center">Islands List</h1>
  <div class="cards">
    <% @islands.each do |island| %>
      <div class="card-category">
        <%= link_to island_path(island), class: "text-decoration-none text-dark" do%>
          <%= render partial: 'card', locals: { island: island } %>
        <% end %>
      </div>
    <% end %>
  </div>

<div class="container gx-0" id="cards">
  <div class="row justify-content-between gx-0">
  </div>
</div>

<%= render partial: 'footer' %>
